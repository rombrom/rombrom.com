{%- capture _pageTitle -%}
  {% if title %}{{ title }} - {% endif %}rombrom.com: Computer play time
{%- endcapture -%}

{%- capture _pageDescription -%}
  {% if excerpt %}
    {{ excerpt }}
  {% else %}
    Personal website of Rommert Zijlstra. I do web things. A lot.
  {% endif %}
{%- endcapture -%}

{%- assign pageTitle = _pageTitle | strip | replace: "\n", " " -%}
{%- assign pageDescription = _pageDescription | strip | replace: "\n", " " -%}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ pageTitle | strip | replace: "\n", " " }}</title>

    <link rel="stylesheet" href="/style.css" />

    <meta name="description" content="{{ pageDescription }}" />
    <meta property="og:description" content="{{ pageDescription }}" />
    <meta property="og:title" content="{{ pageTitle }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.rombrom.com{{ page.url }}" />
    <meta name="twitter:title" content="{{ pageTitle }}" />
    <meta name="twitter:description" content="{{ pageDescription }}" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f55c45">
    <meta name="msapplication-TileColor" content="#fff1d6">
    <meta name="theme-color" content="#fff1d6">
  </head>

  <body class="{{ layout }}">
    {{ content }}

    <footer>(C) Rommert Zijlstra</footer>
  </body>
</html>
