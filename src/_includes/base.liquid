{%- assign baseHref = "https://www.rombrom.com" -%}
{%- assign baseTitle = "rombrom.com: Computer Play Time" -%}

{%- capture _pageTitle -%}
  {% if title %}{{ title }} - {% endif %}{{ baseTitle }}
{%- endcapture -%}

{%- capture _pageDescription -%}
  {% if excerpt %}
    {{ excerpt }}
  {% else %}
    Personal website of Rommert Zijlstra. I do web things. A lot.
  {% endif %}
{%- endcapture -%}

{%- assign pageTitle = _pageTitle | strip | replace: "\n", " " -%}
{%- assign pageDescription = _pageDescription | strip | replace: "\n", " " -%}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ pageTitle }}</title>

    <link rel="stylesheet" href="/style.css" />

    <meta name="description" content="{{ pageDescription }}" />
    <meta property="og:description" content="{{ pageDescription }}" />
    <meta property="og:image" content="{{ baseHref }}/preview.png" />
    <meta property="og:title" content="{{ pageTitle }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ baseHref }}{{ page.url }}" />
    <meta name="twitter:title" content="{{ pageTitle }}" />
    <meta name="twitter:description" content="{{ pageDescription }}" />
    <meta name="twitter:image" content="{{ baseHref }}/preview.png" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f55c45">
    <meta name="msapplication-TileColor" content="#fff1d6">
    <meta name="theme-color" content="#fff1d6">

    <script>
      const { matches: usesDarkTheme } =
        window.matchMedia('(prefers-color-scheme:dark)');

      if (usesDarkTheme) {
        Array.from(document.querySelectorAll(
          'meta[name="msapplication-TileColor"], meta[name="theme-color"]'
        )).forEach((node) => {
          node.content = '#181b1f';
        });
      }
    </script>
  </head>

  <body class="{{ layout }}">
    {{ content }}

    <footer>
      <p>
